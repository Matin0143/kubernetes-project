const app = express();

app.get("/api", (req, res) => {
  res.send("Express Backend API running on Kubernetes ðŸš€");
});

app.listen(3000, () => {
  console.log("Server running on port 3000");
});

Dockerfile (Express)
FROM node:18
WORKDIR /app
COPY package*.json ./
RUN npm install
COPY . .
CMD ["node", "server.js"]
